							</Button>
							<Button DockPanel.Dock="Left" Margin="0,0,10,0" ToolTip.Tip="Forward" Width="32" Height="32" Background="Transparent" CornerRadius="16">
								<PathIcon Width="12" Height="12" Data="M15.2685,4.20949 C14.97,3.92233 14.4952,3.93153 14.208,4.23005 C13.9209,4.52857 13.9301,5.00335 14.2286,5.29051 L22.5028,13.25 L3.75,13.25 C3.33579,13.25 3,13.5858 3,13.9999982 C3,14.4142 3.33579,14.75 3.75,14.75 L22.5018,14.75 L14.2286,22.7085 C13.9301,22.9957 13.9209,23.4705 14.208,23.769 C14.4952,24.0675 14.97,24.0767 15.2685,23.7896 L24.6965,14.7202 C25.1054,14.3268 25.1054,13.6723 24.6965,13.2788 L15.2685,4.20949 Z" />
							</Button>
							<Button DockPanel.Dock="Left" Margin="0,0,10,0" ToolTip.Tip="Reload" Width="32" Height="32" Background="Transparent" CornerRadius="16">
								<PathIcon Width="12" Height="12" Data="M18.6195264,3.31842271 C19.0080059,3.31842271 19.3290603,3.60710385 19.3798716,3.9816481 L19.3868766,4.08577298 L19.3868766,6.97963208 C19.3868766,7.36811161 19.0981955,7.68916605 18.7236513,7.73997735 L18.6195264,7.74698235 L15.7256673,7.74698235 C15.3018714,7.74698235 14.958317,7.40342793 14.958317,6.97963208 C14.958317,6.59115255 15.2469981,6.27009811 15.6215424,6.21928681 L15.7256673,6.21228181 L16.7044011,6.21182461 C13.7917384,3.87107476 9.52212532,4.05209336 6.81933829,6.75488039 C3.92253872,9.65167996 3.92253872,14.34832 6.81933829,17.2451196 C9.71613786,20.1419192 14.4127779,20.1419192 17.3095775,17.2451196 C19.0725398,15.4821573 19.8106555,12.9925923 19.3476248,10.58925 C19.2674502,10.173107 19.5398064,9.77076216 19.9559494,9.69058758 C20.3720923,9.610413 20.7744372,9.88276918 20.8546118,10.2989121 C21.4129973,13.1971899 20.5217103,16.2033812 18.3947747,18.3303168 C14.8986373,21.8264542 9.23027854,21.8264542 5.73414113,18.3303168 C2.23800371,14.8341794 2.23800371,9.16582064 5.73414113,5.66968323 C9.05475132,2.34907304 14.3349409,2.18235834 17.8523166,5.16953912 L17.8521761,4.08577298 C17.8521761,3.66197713 18.1957305,3.31842271 18.6195264,3.31842271 Z" />
							</Button>

							<Button Content="Go" DockPanel.Dock="Right" Margin="10,0,0,0" Background="Transparent" />

							<TextBox Text="" Watermark="Enter URL..." HorizontalAlignment="Stretch" BorderThickness="0" CornerRadius="16"/>
						</DockPanel>

						<StackPanel Orientation="Horizontal" Spacing="10" Opacity="0.6" Margin="5">
							<Button Content="selenium.dev" Command="{Binding NavigateCommand}" CommandParameter="https://www.selenium.dev" Background="Transparent"/>
							<Button Content="google.com" Command="{Binding NavigateCommand}" CommandParameter="https://www.google.com" Background="Transparent"/>
							<Button Content="kleki.com" Command="{Binding NavigateCommand}" CommandParameter="https://www.kleki.com" Background="Transparent"/>
						</StackPanel>
					</StackPanel>
				</Border>

			</DockPanel>
		</Grid>

		<Grid Grid.Row="1" Grid.ColumnDefinitions="2*, Auto, *">

			<Grid>
				<Image x:Name="ScreenshotImage" Source="{Binding Screenshot}" Margin="30" Stretch="Uniform" RenderOptions.BitmapInterpolationMode="HighQuality" PointerMoved="OnImagePointerMoved" PointerPressed="OnImagePointerPressed" PointerReleased="OnImagePointerReleased" PointerWheelChanged="OnImagePointerWheelChanged" KeyDown="OnImageKeyDown" KeyUp="OnImageKeyUp" SizeChanged="OnImageSizeChanged" Focusable="True" />
				
				<Border Opacity="0.6" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="6" CornerRadius="8" Padding="6">
					<StackPanel Orientation="Horizontal" Spacing="10">
						<TextBlock FontSize="12" Opacity="0.7" VerticalAlignment="Center">
							<Run x:Name="Size" />
							<Run x:Name="X" />
							<Run x:Name="Y" />
						</TextBlock>
						<StackPanel Orientation="Horizontal" Spacing="5">
							<Slider Width="100" Minimum="0" Maximum="1" Value="{Binding ScreenshotQuality}" ToolTip.Tip="Screencast quality" />
							<TextBlock Text="{Binding ScreenshotQuality, StringFormat='{}{0:P0}'}" FontSize="12" Opacity="0.7" VerticalAlignment="Center" />
						</StackPanel>
					</StackPanel>
				</Border>
			</Grid>

			<GridSplitter Grid.Column="1" />

			<TabControl Grid.Column="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
				<TabItem Header="Network">
					<view:NetworkView DataContext="{Binding NetworkViewModel}" />
				</TabItem>
				<TabItem Header="Elements">
					<TextBlock Text="qwe" />
				</TabItem>
			</TabControl>

		</Grid>
	</Grid>




</UserControl>
