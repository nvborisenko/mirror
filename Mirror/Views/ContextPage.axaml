			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:vm="using:Mirror.ViewModels"
			 xmlns:view="using:Mirror.Views"
			 x:Class="Mirror.Views.ContextPage"
			 x:DataType="vm:ContextViewModel">

	<Grid>
