				</Button>

				<Border CornerRadius="16" VerticalAlignment="Center">
					<StackPanel HorizontalAlignment="Stretch">
						<DockPanel Margin="10" LastChildFill="True">
							<Button DockPanel.Dock="Left" Margin="0,0,10,0" ToolTip.Tip="Back" Width="32" Height="32" Background="Transparent" CornerRadius="16">
